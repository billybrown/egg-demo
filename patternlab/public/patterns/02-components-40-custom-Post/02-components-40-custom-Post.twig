                {% include &quot;misc-wysiwyg&quot; %}
            {% endblock %}
        &lt;/div&gt;&lt;!-- /.Post__body --&gt;

    &lt;/div&gt;&lt;!-- /.Post__content --&gt;

&lt;/article&gt;&lt;!-- /.Post --&gt;

