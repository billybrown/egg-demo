        &lt;h2 class=&quot;Post__title&quot;&gt;{{ post.title }}&lt;/h2&gt;
    &lt;/header&gt;&lt;!-- /.Post__header --&gt;


    &lt;div class=&quot;Post__content&quot;&gt;

        &lt;div class=&quot;Post__body&quot;&gt;
